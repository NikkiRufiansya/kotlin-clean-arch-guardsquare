#       release_notes: "Test DexGuard 9.4.21 10 November 2023"
    )

    slack(
        message: "App successfully uploaded to Firebase App Distribution",
        success: true,
        slack_url: "https://hooks.slack.com/services/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",
